pipeline {
    agent any 
    
    tools {
        maven 'Maven'
    }
    
    stages {
        stage('Checkout') {
            steps {
                echo "Checking out code from GitHub"
                git branch: 'main', url: 'https://github.com/rishabh301/AmazonDemo.git'
            }
        }
        
        stage('Clean') {
            steps {
                echo "Cleaning previous builds"
                dir('amazondemo') {
                    bat "mvn clean"
                }
            }
        }
        
        stage('Compile') {
            steps {
                echo "Compiling the source code"
                dir('amazondemo') {
                    bat "mvn compile"
                }
            }
        }
        
        stage('Test') {
            steps {
                echo "Running unit tests"
                dir('amazondemo') {
                    bat "mvn test"
                }
            }
        }
        
        stage('Package') {
            steps {
                echo "Packaging the application"
                dir('amazondemo') {
                    bat "mvn package"
                }
            }
        }
        
        stage('Deploy') {
            steps {
                echo "Application packaged successfully"
                echo "WAR file created in amazondemo/target directory"
            }
        }
    }
    
    post {
        success {
            echo "✓ Build completed successfully!"
        }
        failure {
            echo "✗ Build failed. Please check the logs."
        }
    }
}
